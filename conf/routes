
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                              controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                            controllers.AsyncController.message

# UniteFormation
GET     /uniteFormations                    controllers.UniteFormationController.show
GET     /uniteFormations/:idUniteFormation  controllers.UniteFormationController.byId(idUniteFormation: Int)

# Module
GET     /modules                            controllers.ModuleController.show
GET     /modules/:idModule                  controllers.ModuleController.byId(idModule: Int)

# ModuleParUnite
GET     /modulesParUnite                    controllers.ModuleParUniteController.show
GET     /modulesParUnite/:id                controllers.ModuleParUniteController.byId(id: Int)
GET     /modulesParUnite/modules/:idModule  controllers.ModuleParUniteController.byIdModule(idModule: Int)
GET     /modulesParUnite/unites/:idUnite    controllers.ModuleParUniteController.byIdUnite(idUnite: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      